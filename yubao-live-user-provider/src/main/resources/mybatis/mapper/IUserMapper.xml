<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.junbao.yubao.live.user.provider.dao.mapper.IUserMapper">

    <resultMap id="dataMap" type="cn.junbao.yubao.live.user.provider.dao.po.UserPO">
        <id column="id" property="id" />
        <id column="user_id" property="userId"/>
        <result column="nick_name" property="nickName"/>
        <result column="true_name" property="trueName"/>
        <result column="avatar" property="avatar"/>
        <result column="gender" property="gender"/>
        <result column="work_city" property="workCity"/>
        <result column="born_city" property="bornCity"/>
        <result column="born_date" property="bornDate"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    <select id="getUserById" resultMap="dataMap">
        select * from user where user_id = #{userId}
    </select>


    <select id="getBatchByUserIds"  resultMap="dataMap">
        select * from user where user_id in
        <foreach item="id" index="index" collection="userIds"
                 open="(" separator="," close=")">
                 #{id}
        </foreach>
    </select>


</mapper>
